<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".CadastraEndereco">

    <ScrollView
        android:id="@+id/svTCEn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTCEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@color/light_blue"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="Endereço"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="34sp" />

            <EditText
                android:id="@+id/edtCepTCEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Insira o CEP"
                android:inputType="number"
                android:minWidth="300dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btCepTCEn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/light_blue"
                android:text="PESQUISA CEP" />

            <EditText
                android:id="@+id/edtLogradouroTCEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Logradouro"
                android:inputType="text"
                android:minWidth="300dp"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/edtNumeroCasaTCEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Número da Residência"
                android:inputType="number"
                android:minWidth="300dp"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/edtComplementoLogradouroTCEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Complemento"
                android:inputType="text"
                android:minWidth="300dp"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/edtBairroTCEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Bairro"
                android:inputType="text"
                android:minWidth="300dp"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/edtComplementoBairroTCEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Complemento do Bairro"
                android:inputType="text"
                android:minWidth="300dp"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/edtLocalidadeTCEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Localidade"
                android:inputType="text"
                android:minWidth="300dp"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/edtUfTCEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="UF"
                android:inputType="text"
                android:minWidth="300dp"
                android:minHeight="48dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelaTCEn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/light_blue"
                    android:text="VOLTAR" />

                <Button
                    android:id="@+id/btnConfirmaTCEn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/light_blue"
                    android:text="CONFIRMAR" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>